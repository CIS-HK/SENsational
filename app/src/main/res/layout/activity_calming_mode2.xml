<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEFFE8"
    tools:context=".Controller.Calming.CalmingMode2Activity">

    <Button
        android:id="@+id/backButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pauseButton2"
        android:layout_width="101dp"
        android:layout_height="75dp"
        android:layout_marginBottom="24dp"
        android:text="@string/pause"
        android:textColor="#DEFFE8"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bf5"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="117dp"
        android:rotation="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bf1" />

    <ImageView
        android:id="@+id/bf3"
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="154dp"
        android:rotation="-5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bf2" />

    <ImageView
        android:id="@+id/bf2"
        android:layout_width="82dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="156dp"
        android:rotation="40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bf3" />

    <ImageView
        android:id="@+id/bf1"
        android:layout_width="104dp"
        android:layout_height="64dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="92dp"
        android:rotation="-15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bf4" />

    <ImageView
        android:id="@+id/bf6"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="114dp"
        android:rotation="-30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bf6" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sun" />

    <ImageView
        android:id="@+id/grass"
        android:layout_width="430dp"
        android:layout_height="350dp"
        android:layout_marginTop="469dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="302dp"
        android:layout_height="298dp"
        android:layout_marginTop="217dp"
        android:layout_marginBottom="216dp"
        android:tint="#A0FFBA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/bf4"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="8dp"
        android:rotation="-10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bf5" />
</androidx.constraintlayout.widget.ConstraintLayout>