<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Colorize.ColorizeInstructionsActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="507dp"
        android:layout_height="233dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="16dp"
        android:background="#FCE4EC"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="294dp"
        android:layout_height="529dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="252dp"
        android:background="#D1C4E9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="461dp"
        android:layout_height="227dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="228dp"
        android:background="#FFF7FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="424dp"
        android:layout_height="305dp"
        android:layout_marginStart="224dp"
        android:layout_marginBottom="8dp"
        android:background="#F3E5F5"
        app:layout_constraintBottom_toTopOf="@+id/gameName"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="347dp"
        android:layout_height="118dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="32dp"
        android:background="#E1BEE7"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="331dp"
        android:layout_height="551dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Screenshot 2020-03-27 at 11" />

    <TextView
        android:id="@+id/gamaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="monospace"
        android:text="@string/colorize"
        android:textColor="#03477C"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="293dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="The level of difficulty will increase  as you score higher."
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="A word will appear on the screen. "
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamaName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Identify the colour of the word."
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="289dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:text="Choose your answer by clicking one of the buttons."
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="289dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="You score one point if you chose the correct answer."
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="293dp"
        android:layout_height="33dp"
        android:layout_marginTop="27dp"
        android:text="Have fun!"
        android:textAlignment="center"
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="This game aims to develop your self control."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#03477C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamaName" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="80dp"
        android:background="#F790A4"
        android:text="BACK"
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="91dp"
        android:layout_height="51dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="80dp"
        android:background="#F790A4"
        android:text="@string/play"
        android:textColor="#03477C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>