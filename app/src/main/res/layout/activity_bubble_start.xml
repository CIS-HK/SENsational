<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Controller.BubblesGame.BubbleStartActivity">

    <ImageView
        android:id="@+id/background1"
        android:layout_width="447dp"
        android:layout_height="114dp"
        android:background="@drawable/purple2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/purple2"
        tools:srcCompat="@drawable/purple2" />

    <ImageView
        android:id="@+id/bubble2"
        android:layout_width="178dp"
        android:layout_height="176dp"
        android:background="@drawable/orangebubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279"
        app:srcCompat="@drawable/orangebubble"
        tools:src="@drawable/orangebubble"
        tools:srcCompat="@drawable/orangebubble" />

    <ImageView
        android:id="@+id/bubble1"
        android:layout_width="226dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.602"
        app:srcCompat="@drawable/pinkbubble"
        tools:src="@drawable/pinkbubble"
        tools:srcCompat="@drawable/pinkbubble" />

    <TextView
        android:id="@+id/targetsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/targets_label"
        android:textColor="#A96DEE"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/attentionSpan2"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/attention_span"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bubble2"
        app:layout_constraintEnd_toStartOf="@+id/bubble2"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/bubble2"
        app:layout_constraintTop_toBottomOf="@+id/bubble2"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/workingMemory"
        android:layout_width="102dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/working_memory"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bubble1"
        app:layout_constraintEnd_toStartOf="@+id/bubble1"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toEndOf="@+id/bubble1"
        app:layout_constraintTop_toBottomOf="@+id/bubble1"
        app:layout_constraintVertical_bias="0.424" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="430dp"
        android:layout_height="117dp"
        android:background="@drawable/purple2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workingMemory"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/purple2"
        tools:srcCompat="@drawable/purple2" />

    <TextView
        android:id="@+id/bubblesTitle"
        android:layout_width="371dp"
        android:layout_height="84dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/bungee_inline"
        android:text="@string/bubbles_title"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/select_mode_label"
        android:textColor="#FAFCFD"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <Spinner
        android:id="@+id/modeSpinner"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:backgroundTint="#00F8F4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968"
        tools:visibility="visible" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="117dp"
        android:layout_height="59dp"
        android:backgroundTint="#FAFBFC"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/play_bubbles"
        android:textColor="#A96DEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988" />

    <Button
        android:id="@+id/instructionsButton"
        android:layout_width="161dp"
        android:layout_height="56dp"
        android:backgroundTint="#A96DEE"
        android:fontFamily="@font/bubbler_one"
        android:text="@string/instructions"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

</androidx.constraintlayout.widget.ConstraintLayout>